import random
import string

def create_password(length, use_letters, use_numbers, use_symbols):
    pool = ""
    if use_letters:
        pool += string.ascii_letters
    if use_numbers:
        pool += string.digits
    if use_symbols:
        pool += string.punctuation

    if not pool:
        return "Error: No character types selected!"

    password = ''.join(random.choice(pool) for _ in range(length))
    return password

def main():
    print("Welcome to Siddharth's Password Generator!")

    while True:
        try:
            length = int(input("Password length (1-128): "))
            if length < 1 or length > 128:
                print("Please enter a valid length between 1 and 128.")
                continue
            break
        except ValueError:
            print("Invalid input! Enter a number.")

    use_letters = input("Include letters? (y/n): ").strip().lower() == "y"
    use_numbers = input("Include numbers? (y/n): ").strip().lower() == "y"
    use_symbols = input("Include symbols? (y/n): ").strip().lower() == "y"

    password = create_password(length, use_letters, use_numbers, use_symbols)
    print(f"Generated Password: {password}")

if __name__ == "__main__":
    main()